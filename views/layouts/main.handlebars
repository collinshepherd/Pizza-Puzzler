  <body> 
    <div class='jumbotron jumbotron-fluid text-center'>
      <h1 class='display-4 home-title'><a
          id='theriddle'
          href='/'
        >Game</a></h1>
      <hr class='my-0' />
    </div>
    <ul class='nav d-flex justify-content-between' id='nav'>
      <li class='nav-item'>
        <a class='nav-link active' href='/'>Home</a>
        {{! Links to home }}
      </li>
      <li class='nav-item'>
        <a class='nav-link' href='/profile'>Profile</a>
        {{! Links to profile }}
      </li>
      <li class='nav-item'>
        <a class='nav-link' href='/settings'>Settings</a>
      </li>
      <li class='nav-item'>
        {{#if loggedIn}}
          <button
            class='nav-link'
            {{! href='#' }}
            tabindex='-1'
            aria-disabled='true'
            id='logout'
          >Logout</button>
          {{! Goes home if user logs out}}
        {{else}}
          <a
            class='nav-link'
            href='/login'
            tabindex='-1'
            aria-disabled='true'
            id='login'
          >Login</a>
        {{/if}}
      </li>
    </ul>
    <main>
      {{{body}}}
    </main>
